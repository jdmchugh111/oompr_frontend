<div class="container-fluid vh-100 d-flex flex-column justify-content-center align-items-center text-center bg-danger">
  <div class="w-100">
    <h1 class="text-white display-3">oompr</h1>
    <h3 class="text-white mb-4">Where do you want to live?</h3>
    <%= form_tag(search_path, method: :get, class: "w-50 mx-auto") do %>
      <div class="input-group mb-3">
        <span class="input-group-text"><i class="fas fa-search"></i></span>
        <%= text_field_tag :city, nil, placeholder: "Enter a city...", class: "form-control" %>
        <button class="btn btn-outline-light" type="submit">Search</button>
      </div>
    <% end %>
    <button id="useLocation" class="btn btn-light">Use My Current Location</button>
    <script src="<%= asset_path('geolocation.js.erb') %>"></script>
</div>